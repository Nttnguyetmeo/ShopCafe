<div class="row" id="divServiceCardList">
    <div class="col-12 px-0">
        <div class="card card-plain mb-3">
            <div class="vtcardheader card-header pb-0">
                <div class="left">
                    <h6 class="mb-0">@Local["Thẻ trả trước"]</h6>
