                </div>
                <div class="right">
                    <div class="wrap">
                        <div class="wrapblock pb-0 mb-0">
                            <div class="form-check me-3">
                                <input id="SC_CheckDis" class="form-check-input pr-2" type="checkbox">
                                <label>@Local["Thẻ ẩn"]</label>
