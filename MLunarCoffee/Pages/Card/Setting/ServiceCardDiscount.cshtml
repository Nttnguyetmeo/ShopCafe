    function SCDetail_GetDataExec(){
        let IsCheckTypeAll = $("#SCDetail_CheckTypeAll").is(":checked");
        let IsCheckSer = $("#SCDetail_CheckSer").is(":checked");
        let IsCheckSerType = $("#SCDetail_CheckSerType").is(":checked");
        for(let i = 0; i < SCDetail_Ruler.length ;i++){
            let item = SCDetail_Ruler[i];
            if(item.type == 'all'){
                if(IsCheckTypeAll) {
                    let _type_discount = Number($("#Discount_TypeAll").dropdown("get value")) ? Number($("#Discount_TypeAll").dropdown("get value")) : 0;
                    let _value_discount = Number($("#Discount_NumAll").val()) ? Number($("#Discount_NumAll").val()) : 0;
                    item.active = 1;
                    item.percent = _type_discount == 1 ? _value_discount : 0;
                    item.amount = _type_discount == 2 ? _value_discount : 0;
                    item.value = [];
                }
                else{
                    item.active = 0;
                    item.percent = 0;
                    item.amount = 0;
                    item.value = [];
                }
            }

            if(item.type == 'servicetype'){
                let dataValues =[];
                for ([key, value] of Object.entries(SCDetail_DataSerType)){
                    if(value.Choose == 1 && (value.Percent != 0 || value.Amount != 0)){
                        let e= {};
                        e.id = value.ID;
                        e.percent = value.Percent;
                        e.amount = value.Amount;
                        dataValues.push(e);
                    }
                }
                if(IsCheckSerType){
                    item.active = 1;
                    item.percent = 0;
                    item.amount = 0;
                }
                else{
                    item.active = 1;
                    item.percent = 0;
                    item.amount = 0;
                }
                item.value = dataValues;
            }

            if (item.type == 'service') {
                let dataValues = [];
                for ([key, value] of Object.entries(SCDetail_DataSer)){
                    if (value.Choose == 1 && (value.Percent != 0 || value.Amount != 0)) {
                        let e= {};
                        e.id = value.ID;
                        e.percent = value.Percent;
                        e.amount = value.Amount;
                        dataValues.push(e);
                    }
                }
                if (IsCheckSer) {
                    item.active = 1;
                    item.percent = 0;
                    item.amount = 0;
                }
                else {
                    item.active = 1;
                    item.percent = 0;
                    item.amount = 0;
                }
                item.value = dataValues;
            }
        }
    }

