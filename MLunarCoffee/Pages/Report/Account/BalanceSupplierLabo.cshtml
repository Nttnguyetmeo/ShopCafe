@page
@model MLunarCoffee.Pages.Report.Account.BalanceSupplierLaboModel
@{
    Layout = null;
}

<div class="card">
    <div class="card-header p-3 ">
        <div class="d-lg-flex">
            <div class="w-70 col-auto my-auto">
                <p data-languagestatic="balance_supplier_labo_header" class="text-md text-dark font-weight-bold mb-1">Công Nợ Nhà Cung Câp Labo</p>
                <p class="text-sm mb-0">Some text of detail sub</p>
            </div>
            <div class="ms-auto my-auto mt-1">
                <i class="vtt-icon vttech-icon-all text-sm text-gradient text-info"
                   data-bs-toggle="collapse" data-bs-placement="top"
                   href="#AccountBalanceLabo" aria-expanded="true"
                   data-bs-original-title="Collapse"></i>

                <i class="vtt-icon  vttech-icon-refesh text-sm text-gradient text-info"
                   data-bs-toggle="tooltip" data-bs-placement="top"
                   data-bs-original-title="Refresh" onclick="LoadDataReport()"></i>

                <i data-tab="export_excel" class="_tab_control_ vtt-icon  vttech-icon-export-ex text-sm text-gradient text-info"
                   data-bs-toggle="tooltip" data-bs-placement="top"
                   data-bs-original-title="Excel" onclick="exportData()"></i>
 
            </div>
        </div>
        <div class="row p-2 pb-0 ps-0">
            <div class="col-lg-4 col-6">
                <div class="border-dashed border-1 border-secondary border-radius-md p-2 mt-2 pb-0">
                    <h6 data-languagedyn="div" class="text-sm text-primary text-gradient mb-0">Tổng</h6>
                    <h6 class="font-weight-bolder"> <span id="lbTotalNeedPaid">0</span></h6>
                </div>
            </div>
            <div class="col-lg-4 col-6">
                <div class="border-dashed border-1 border-secondary border-radius-md p-2 mt-2 pb-0">
                    <h6 data-languagedyn="div" class="text-sm text-primary text-gradient mb-0">Đã Thanh Toán</h6>
                    <h6 class="font-weight-bolder"> <span id="lbTotalPaid">0</span></h6>
                </div>
            </div>
            <div class="col-lg-4 col-12  mt-4 mt-lg-0">
                <div class="border-dashed border-1 border-secondary border-radius-md p-2 mt-2 pb-0">
                    <h6 data-languagedyn="div" class="text-sm text-primary text-gradient mb-0">Nợ</h6>
                    <h6 class="font-weight-bolder"> <span id="lbTotalLeft">0</span></h6>
                </div>
            </div>

        </div>
    </div>
    <div class="collapsesticky collapse show" id="AccountBalanceLabo">

        <div class="card-body p-3 pt-0">
            <div class="m-0 my-3 mobile-responsive">
                <table class="table vt-table mb-0" id="dtContentAccountBalanceLabo">
                    <thead>
                        <tr>
                            <th style="width: 20px; display: none !important;"></th>
                            <th style="width: 50px;">#</th>
                            <th data-languagestatic="supplier">Nhà Cung Cấp</th>
                            <th data-languagestatic="name_holder" style="width:150px;">Người Đại Diện</th>
                            <th data-languagestatic="sign_fund" style="width:140px;">Ký Quỹ</th>
                            <th data-languagestatic="incurred_received_labo">Phát Sinh Labo Đã Nhận</th>
                            <th data-languagestatic="rp_paid">Đã Thanh Toán</th>
                            <th data-languagestatic="rp_left">Còn Lại</th>
                        </tr>
                    </thead>
                    <tbody data-languagedyn="grid" id="dtContentAccountBalanceLaboBody">
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<div id="detailShow" class="card mt-2" style="display: none">
    <div class="card-header p-3 ">
        <div class="d-lg-flex">
            <div class="w-70 col-auto my-auto">
                <p id="lbDetail" class="text-md text-dark font-weight-bold mb-1"></p>
                <p class="text-sm mb-0">Some text of detail sub</p>
            </div>
            <div class="ms-auto my-auto mt-1">
                <i class="vtt-icon vttech-icon-all text-sm text-gradient text-info"
                   data-bs-toggle="collapse" data-bs-placement="top"
                   href="#AccountBalanceLaboDetail" aria-expanded="true"
                   data-bs-original-title="Collapse"></i>

                <i class="vtt-icon  vttech-icon-refesh text-sm text-gradient text-info"
                   data-bs-toggle="tooltip" data-bs-placement="top"
                   data-bs-original-title="Refresh" onclick="LoadDataReport_AccountBalanceLabo_Detail()"></i>

                <i data-tab="export_excel" class="_tab_control_ vtt-icon  vttech-icon-export-ex text-sm text-gradient text-info"
                   data-bs-toggle="tooltip" data-bs-placement="top"
                   data-bs-original-title="Excel" onclick="exportData_Detail()"></i>

            </div>
        </div>

    </div>
    <div class="collapsesticky collapse show" id="AccountBalanceLaboDetail">
        <div class="card-body p-3 pt-0">
            <div class="m-0 my-3 mobile-responsive">
                <table class="table vt-table mb-0">
                    <thead>
                        <tr>
                            <th data-languagestatic="no" style="width: 60px">#</th>
                            <th data-languagestatic="custcode">Mã Khách Hàng</th>
                            <th data-languagestatic="name">Tên Khách Hàng</th>
                            <th data-languagestatic="">Dịch Vụ</th>
                            <th data-languagestatic="">Trạng Thái</th>
                            <th data-languagestatic="rp_rasing">Tổng Phát Sinh</th>
                            <th data-languagestatic="rp_paid">Tổng Thanh Toán</th>
                            <th data-languagestatic="rp_left">Công Nợ</th>
                        </tr>
                    </thead>
                    <tbody data-languagedyn="grid" id="dtBodyDetail">
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<script>js_require('/js/comon/initialize_setting.js');</script>
<script>js_require('/js/main.js');</script>
<script type="text/javascript">
    var dataDetail;
    var nameType;
    var __CurrentDetail;
    $(document).ready(function () {
 
        LoadDataReport();
        $('#dtContentAccountBalanceLabo').tablesort();
        $('#dtContentAccountBalanceLabo tbody').on('click', 'tr', function () {
            $("#detailShow").show();
            __CurrentDetail = Number($(this).closest('tr')[0].childNodes[0].innerHTML);
            $(this).parent().children().removeClass('active')
            $(this).closest('tr').addClass('active');
             nameType = $(this).closest('tr')[0].childNodes[2].innerHTML;
            $('#lbDetail').html(nameType);
            LoadDataReport_AccountBalanceLabo_Detail();
            $('html, body').animate({
                scrollTop: $("#detailShow").offset().top
            }, 300);
        });
        //$("#divReportViewDetail table").closest("table").parent().addClass("stickytable");
        Checking_TabControl_Permission();
    });

    function LoadDataReport() {
        let _dateFrom = "@Model._dateFrom";
        let _dateTo = "@Model._dateTo";
        let _branch = "@Model._branch";
        AjaxLoad(url = "/Report/Account/BalanceSupplierLabo/?handler=Loadata"
            , data = { 'branchID': _branch, 'dateFrom': _dateFrom, 'dateTo': _dateTo}
            , async = true
            , error = function () { notiError_SW(); }
            , success = function (result) {
                if (result != "") {
                    let dataDetailGrid = JSON.parse(result)["Table"];
                    dataDetail = JSON.parse(result)["Table1"];
                    let dataMaster = JSON.parse(result)["Table2"];
        
                    Count_Up('lbTotalNeedPaid', dataMaster[0].totalNeedPaid)
                    Count_Up('lbTotalPaid', dataMaster[0].totalPaid)
                    Count_Up('lbTotalLeft', dataMaster[0].totalLeft)

                    RenderReportAccountBalanceLabo(dataDetailGrid, "dtContentAccountBalanceLaboBody");
                }
                else {
                    notiError_SW();
                }
            }
        );
        return false;
    }
    function RenderReportAccountBalanceLabo(data, id) {
        var myNode = document.getElementById(id);
        if (myNode != null) {
            myNode.innerHTML = '';
            let stringContent = '';
            if (data && data.length > 0) {
                for (var i = 0; i < data.length; i++) {
                    let item = data[i];
                    let tr = '<td class="d-none">' + item.ID + '</td>'
                        + '<td class="vt-number-order"></td>'
                        + '<td>' + item.SupplierName + '</td>'
                        + '<td>' + item.Person + '</td>'
                        + '<td>' + formatNumber(item.FundAmount) + '</td>'
                        + '<td data-sortvalue="' + item.IncurredAmountStatus + '">' + formatNumber(item.IncurredAmountStatus) + '</td>'
                        + '<td data-sortvalue="' + item.AmountStatus + '">' + formatNumber(item.AmountStatus) + '</td>'
                        + '<td data-sortvalue="' + item.AmountOveStatus + '">' + formatNumber(item.AmountLeft) + '</td>'

                    stringContent = stringContent + '<tr class="vt-number" role="row">' + tr + '</tr>';
                }
            }
            document.getElementById(id).innerHTML = stringContent;

        }
    }

    /// DETAIL LIST
    function LoadDataReport_AccountBalanceLabo_Detail() {
        let dataSupplier = dataDetail.filter(dataDetail => dataDetail.SupplierID == __CurrentDetail);
        RenderDetail(dataSupplier, 'dtBodyDetail');
    }

    function RenderDetail(data, id) {
        var myNode = document.getElementById(id);
        if (myNode != null) {
            myNode.innerHTML = '';
            let stringContent = '';
            if (data && data.length > 0) {
                for (var i = 0; i < data.length; i++) {
                    let item = data[i];
                    let tr =   '<td class="vt-number-order"></td>'
                        + '<td>' + item.CustCode + '</td>'
                        + '<td>' + item.CustName + '</td>'
                        + '<td>' + item.ServiceUsingName + '</td>'
                        + '<td>' + item.StatusName + '</td>'
                        + '<td data-sortvalue="' + item.Price + '">' + formatNumber(item.Price) + '</td>'
                        + '<td data-sortvalue="' + item.TotalPaid + '">' + formatNumber(item.Amount) + '</td>'
                        + '<td data-sortvalue="' + (item.AmountLeft) + '">' + formatNumber(item.AmountLeft) + '</td>'
                    stringContent = stringContent + '<tr  class="vt-number" role="row">' + tr + '</tr>';
                }
            }
            document.getElementById(id).innerHTML = stringContent;
            $('#dtDetail').tablesort();
        }
    }
    function exportData() {
        exportToExcel("dtContentAccountBalanceLabo", 'cong-no-theo-nha-cung-cap-labo');
    }
    function exportData_Detail() {
        exportToExcel("dtDetail", 'Chi-Tiet-Cong-No-Labo-' + xoa_dau(nameType));
    }
</script>

 