@page
@model SourceMain.Pages.Report.Dashboard.CustomerTrafficBySourceBarModel
@{
    Layout = null;
}
<script>js_require('/js/comon/initialize_setting.js');</script>
<div class="card">
    <div class="card-header p-3">
        <div class="d-lg-flex">
            <div class="w-70 col-auto my-auto">
                <p data-languagestatic="traffic_according_source_header"
                   class="text-md text-dark font-weight-bold mb-1">Lưu lượng khách theo nguồn khách hàng</p>
                <p class="text-sm mb-0">Some text of detail sub</p>
            </div>
            <div class="ms-auto my-auto mt-1">
                <i class="vtt-icon vttech-icon-all text-sm text-gradient text-info"
                   data-bs-toggle="collapse" data-bs-placement="top"
                   href="#AppointmentTrafficBar" aria-expanded="true"
                   data-bs-original-title="Collapse"></i>

                <i class="vtt-icon  vttech-icon-refesh text-sm text-gradient text-info"
                   data-bs-toggle="tooltip" data-bs-placement="top"
                   data-bs-original-title="Refresh" onclick="LoadDataReport_CustomerTrafficBySourceBar()"></i>
             
            </div>
        </div>

    </div>
    <div class="collapsesticky collapse show" id="AppointmentTrafficBar">
        <div class="card-body p-3 pt-0">
            <div class="chart">
                <canvas id="CustomerTrafficBySourceBar" class="chart-canvas" height="300"></canvas>
            </div>
        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        LoadDataReport_CustomerTrafficBySourceBar();
    });
    function LoadDataReport_CustomerTrafficBySourceBar() {
        let _dateFrom = "@Model._dateFrom";
        let _dateTo = "@Model._dateTo";
        let _branch = "@Model._branch";
        AjaxLoad(url = "/Report/Dashboard/CustomerTrafficBySourceBar/?handler=Loadata"
            , data = { 'branchID': _branch, 'dateFrom': _dateFrom, 'dateTo': _dateTo }
            , async = true
            , error = function () { notiError_SW(); }
            , success = function (result) {
                if (result != "") {
                    let data = JSON.parse(result)["Table"];
                    let cols = [];
                    cols.push({'label': 'CheckIn', 'value': 'CheckIn'});
                    cols.push({'label': 'UnCheckIn', 'value': 'UnCheckIn'});
                    rp_barcols('CustomerTrafficBySourceBar', data, 'TypeName', cols);

                    
                }
            }
        );

        return false;

    }

</script>
