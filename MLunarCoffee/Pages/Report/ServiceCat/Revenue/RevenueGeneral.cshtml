    function RG_Event() {
        $("#RG_Grid .buttonViewClass").unbind('click').on("click", function () {
            let cat = $(this).attr('data-cat');
            let type = Number($(this).attr('data-type'));
            let catname = $(this).attr('data-catname');
            let datamonth = $(this).attr('data-month');

            if (datamonth == "0") {
                switch (type) {
                    case 0:
                        $("#RGDetail_SerCat").html('@Local["Tất cả nhóm"]');
                        break;
                    case 1:
                        $("#RGDetail_SerCat").html(catname);
                        break;
                    case 2:
                        $("#RGDetail_SerCat").html('@Local["Tiền cọc"]');
                        break;
                    case 3:
                        $("#RGDetail_SerCat").html('@Local["Đơn thuốc"]');
                        break;
                    case 4:
                        $("#RGDetail_SerCat").html('@Local["Thẻ trả trước"]');
                        break;
                }
                $("#RGGeneralDetail").fadeIn('slow');
                $("#RGGeneralDay").hide();
                RG_DetailLoad(cat, type);
                $('html, body').animate({
                    scrollTop: $("#RGGeneralDetail").offset().top
                }, 300);
            }
            else {
                $("#RGDetail_SerCatDay").html(datamonth.substring(4, 6) + ' / ' + datamonth.substring(0, 4));
                $("#RGGeneralDay").fadeIn('slow');
                $("#RGGeneralDetail").hide();
                RG_DetailDayLoad(datamonth);
                $('html, body').animate({
                    scrollTop: $("#RGGeneralDay").offset().top
                }, 300);

            }


        })
    }
