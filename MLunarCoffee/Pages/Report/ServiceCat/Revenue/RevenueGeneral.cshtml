                        <tr role="row">
                            <th rowspan="3">#</th>
                            <th colspan="3">@Local["Nhóm dịch vụ"]</th>
                            <th rowspan="2" class="day">@Local["Chi tiết theo ngày"]</th>
                        </tr>
                        <tr role="row">
                            <th rowspan="2">@Local["Tên"]</th>
                            <th rowspan="2">@Local["Số khách"]</th>
                            <th rowspan="2">@Local["Doanh thu"]</th>
                        </tr>
                        <tr rowspan="1" class="detail" role="row">
                        </tr>
                    </thead>
                    <tbody id="RG_GridDayBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    let xhrLoadList, xhrLoadDetail;
    let DataReportMain, DataReportMainSlice;
    let shtable;
    let RGDataMonth = [];
    let RGCDataRaw = [];
    let IndexReport = 0;
    let timeoutCount;

    let RGDataDay = [];
    let RGCDataRawDay = [];
    $(document).ready(function () {
        shtable = $("#RG_GridDetail").TableExpandColumn({
            shtoogle: $('.shtoogle')
        });
        ToolPopper();
        RG_Load();
        Checking_TabControl_Permission();
    });
    function RG_Load() {
        RGDataMonth = [];
        RGCDataRaw = [];
        $('#RG_Grid .detail').html('');
        if (xhrLoadList && xhrLoadList.readyState != 4) xhrLoadList.abort();
        let _branchID = "@Model._branchID";
        let _dateFrom = "@Model._dateFrom";
        let _dateTo = "@Model._dateTo";
        xhrLoadList = AjaxLoad(url = "/Report/ServiceCat/Revenue/RevenueGeneral/?handler=Loadata"
            , data = {
                'branchID': _branchID
                , 'dateFrom': _dateFrom
                , 'dateTo': _dateTo
            }
            , async = true
            , error = function () { notiError_SW(); }
            , success = function (result) {
                if (result != "") {
                    let datas = JSON.parse(result);
                    let data = datas["Table"];
                    RGCDataRaw = datas["Table1"];
                    RGDataMonth = datas["Table2"];
                    RG_RenderMonth(RGDataMonth, "RG_Grid");
                    RG_Render(data, "RG_GridBody");
                } else {
                    notiError_SW();
                }
            }
        );
        return false;
    }
    function RG_RenderMonth(data, id) {
        var myNode = $('#' + id + ' .detail')[0];
        var myNodeParent = $('#' + id + ' .month')[0];
        if (myNode != null) {
            let stringContent = '';
            if (data.length > 0) {
                for (let i = 0; i < data.length; i++) {
                    stringContent = stringContent
                        + `<th class="month">
                                                             <a href="#" class="cursor-pointer border-1  border-primary border-bottom buttonViewClass" data-month="${data[i].Month}" data-type="0" data-cat="0">
                                                                    ${data[i].Month.substring(4, 6) + ' / ' + data[i].Month.substring(0, 4)}
                                                            </a></th>`;
                }
                myNode.innerHTML = myNode.innerHTML + stringContent;
                myNodeParent.setAttribute("colspan", data.length);
            }
            else myNodeParent.classList.add("d-none");

        }

    }
    async function RG_Render(data, id) {
        new Promise((resolve) => {
            var myNode = document.getElementById(id);
            if (myNode != null) {
                myNode.innerHTML = '';
                let stringContent = '';
                if (data && data.length > 0) {
                    let tmonth = [];
                    let TotalCust = 0, TotalNew = 0, TotalOld = 0, TotalAmount = 0;
                    for (let i = 0; i < data.length; i++) {
                        let item = data[i];
                        TotalCust = TotalCust + item.TotalCust;
                        TotalNew = TotalNew + item.TotalNew;
                        TotalOld = TotalOld + item.TotalOld;
                        TotalAmount = TotalAmount + item.TotalAmount;
                        let sername = RG_Render_GetName(item.Type, item.SercatName)
                        let tr = `
                                                        <td class="vt-number-order"></td>
                                                        <td>
                                                                <a href="#" class="cursor-pointer border-1 border-primary border-bottom buttonViewClass" data-month="0" data-type="${item.Type}" data-catname="${sername}" data-cat="${item.SercatID}">
                                                                    ${sername}
                                                                </a>
                                                        </td>
                                                        <td>${formatNumber(item.TotalCust)}</td>
                                                        <td>${formatNumber(item.TotalNew)}</td>
                                                        <td>${formatNumber(item.TotalOld)}</td>
                                                        <td>${formatNumber(item.TotalAmount)}</td>`;
                        for (let j = 0; j < RGDataMonth.length; j++) {
                            let _item = RGCDataRaw.filter(v => v.SercatID === item.SercatID
                                && v.Type === item.Type
                                && v.MonthCreated == RGDataMonth[j].Month
                            );
                            let sum = _item.map(item => item.TotalAmount).reduce((prev, curr) => prev + curr, 0);
                            tr = tr + '<td class="month">' + formatNumber(sum) + '</td>'
                            tmonth[j] = (tmonth[j] != undefined ? tmonth[j] : 0) + sum;
                        }
                        stringContent = stringContent + '<tr class="vt-number" role="row">' + tr + '</tr>';
                        if (data.length > 1 && i == data.length - 1) {
                            trtotal =
                                '<td></td>'
                                + '<td><a href="#" class="text-white cursor-pointer border-1 border-white border-primary border-bottom buttonViewClass" data-month="0" data-type="0" data-cat="0">@Local["Tất cả"]</a></td>'
                                + '<td>' + formatNumber(TotalCust) + '</td>'
                                + '<td>' + formatNumber(TotalNew) + '</td>'
                                + '<td>' + formatNumber(TotalOld) + '</td>'
                                + '<td>' + formatNumber(TotalAmount) + '</td>';
                            for (let j = 0; j < tmonth.length; j++) {
                                trtotal = trtotal + '<td class="source">' + formatNumber(tmonth[j]) + '</td>'
                            }
                            stringContent = stringContent + '<tr class="text-white bg-gradient  bg-primary" role="row">' + trtotal + '</tr>';
                        }
                    }

                }
                document.getElementById(id).innerHTML = stringContent;
            }
            RG_Event();

        })
    }
    //#region // Detail day
    function RG_DetailDayLoad(date) {
        RGDataDay = [];
        RGCDataRawDay = [];
        $('#RG_GridDay .detail').html('');
        if (xhrLoadList && xhrLoadList.readyState != 4) xhrLoadList.abort();
        let _branchID = "@Model._branchID";
        xhrLoadList = AjaxLoad(url = "/Report/ServiceCat/Revenue/RevenueGeneral/?handler=Loadataday"
            , data = {
                'branchID': _branchID
                , 'datefromInt': date.toString() + '00'
                , 'datetoInt': date.toString() + '31'
            }
            , async = true
            , error = function () { notiError_SW(); }
            , success = function (result) {
                if (result != "") {
                    let datas = JSON.parse(result);
                    let data = datas["Table"];
                    RGCDataRawDay = datas["Table1"];
                    RGDataDay = datas["Table2"];
                    RG_RenderHeaderDay(RGDataDay, "RG_GridDay");
                    RG_RenderDay(data, "RG_GridDayBody");
                } else {
                    notiError_SW();
                }
            }
        );
        return false;
    }
    function RG_RenderHeaderDay(data, id) {
        var myNode = $('#' + id + ' .detail')[0];
        var myNodeParent = $('#' + id + ' .day')[0];
        if (myNode != null) {
            let stringContent = '';
            if (data.length > 0) {
                for (let i = 0; i < data.length; i++) {
                    stringContent = stringContent
                        + `<th class="day">
                                                        ${data[i].Day.slice(2, 4) + ' / ' + data[i].Day.slice(0, 2)}
                                                        </th>`;
                }
                myNode.innerHTML = myNode.innerHTML + stringContent;
                myNodeParent.setAttribute("colspan", data.length);
            }
            else myNodeParent.classList.add("d-none");

        }

    }
    async function RG_RenderDay(data, id) {
        new Promise((resolve) => {
            var myNode = document.getElementById(id);
            if (myNode != null) {
                myNode.innerHTML = '';
                let stringContent = '';
                if (data && data.length > 0) {
                    let tday = [];
                    let TotalCust = 0, TotalAmount = 0;
                    for (let i = 0; i < data.length; i++) {
                        let item = data[i];
                        TotalCust = TotalCust + item.TotalCust;
                        TotalAmount = TotalAmount + item.TotalAmount;
                        let sername = RG_Render_GetName(item.Type, item.SercatName)
                        let tr = `
                                                        <td class="vt-number-order"></td>
                                                        <td>
                                                              ${sername}
                                                        </td>
                                                        <td>${formatNumber(item.TotalCust)}</td>
                                                        <td>${formatNumber(item.TotalAmount)}</td>`;
                        for (let j = 0; j < RGDataDay.length; j++) {
                            let _item = RGCDataRawDay.filter(v => v.SercatID === item.SercatID
                                && v.Type === item.Type
                                && v.DayCreated == RGDataDay[j].Day
                            );
                            let sum = _item.map(item => item.TotalAmount).reduce((prev, curr) => prev + curr, 0);
                            tr = tr + '<td class="day">' + formatNumber(sum) + '</td>'
                            tday[j] = (tday[j] != undefined ? tday[j] : 0) + sum;
                        }
                        stringContent = stringContent + '<tr class="vt-number" role="row">' + tr + '</tr>';
                        if (data.length > 1 && i == data.length - 1) {
                            trtotal =
                                '<td></td>'
                                + '<td></td>'
                                + '<td>' + formatNumber(TotalCust) + '</td>'
                                + '<td>' + formatNumber(TotalAmount) + '</td>';
                            for (let j = 0; j < tday.length; j++) {
                                trtotal = trtotal + '<td>' + formatNumber(tday[j]) + '</td>'
                            }
                            stringContent = stringContent + '<tr class="text-white bg-gradient  bg-primary" role="row">' + trtotal + '</tr>';
                        }
                    }

                }
                document.getElementById(id).innerHTML = stringContent;
            }
            RG_Event();

        })
    }
    //#endregion
    //#region // LOAD DETAIL AND RENDER
    function RG_DetailLoad(cat, type) {
        if (xhrLoadDetail && xhrLoadDetail.readyState != 4) xhrLoadDetail.abort();
        let _branchID = "@Model._branchID";
        let _dateFrom = "@Model._dateFrom";
        let _dateTo = "@Model._dateTo";
        IndexReport = 0;
        xhrLoadDetail = AjaxLoad(url = "/Report/ServiceCat/Revenue/RevenueGeneral/?handler=LoadataDetail"
            , data = {
                'branchID': _branchID,
                'type': type,
                'ServiceCat': cat,
                'dateFrom': _dateFrom,
                'dateTo': _dateTo,
            }
            , async = true
            , error = function () { notiError_SW(); }
            , success = function (result) {
                if (result != "0") {

                    let data = JSON.parse(result);
                    DataReportMain = JSON.parse(JSON.stringify(data));
                    DataReportMainSlice = sliceIntoChunks(data, 500);
                    $("#RG_GridDetailBody").empty();
                    fnRenderBlock(DataReportMainSlice[IndexReport], "RG_GridDetailBody"
                        , blocknum = 100
                        , fnrender = RG_DetailRender
                        , fnsuccess = null
                    );

                    Count_Up("RG_totaldata", DataReportMain.length);
                }
                else {
                    notiError_SW();
                }
            }
        );
    }
    function RG_RenderMore() {
        IndexReport += 1;
        if (DataReportMainSlice && DataReportMainSlice[IndexReport]) {
            fnRenderBlock(DataReportMainSlice[IndexReport], "RG_GridDetailBody"
                , blocknum = 100
                , fnrender = RG_DetailRender
                , fnsuccess = null
            );
        }
    }
    async function RG_DetailRender(data, id) {
        new Promise((resolve) => {
            setTimeout(() => {
                var myNode = document.getElementById(id);
                if (myNode != null) {
                    if (data && data.length != 0) {
                        for (let i = 0; i < data.length; i++) {
                            let item = data[i];
                            let tr = `
                                    <tr class="vt-number">
                                        <td class="vt-number-order"></td>
                                        <td>
                                            <a target="_blank" href="/Customer/MainCustomer?CustomerID=${item.CustomerID}&ver=${versionofWebApplication}">${item.CustCode}</a>
                                        </td>
                                            <td data-name="custcodeold">${item.CustOldCode}</td>
                                        <td data-name="doccode">${item.DocCode}</td>
                                        <td>${item.CustName}</td>
                                        <td>${formatNumber(item.Amount)}</td>
                                        <td>${RG_Render_GetType(item.Type)}</td>
                                        <td>${item.ServiceCatName}</td>
                                        <td>${RG_Render_GetSerName(item.Type, item.ServiceID, item.MedID, item.CardID)}</td>
                                        <td data-name="quantity">${item.Qty == 0 ? '' : item.Qty}</td>
                                        <td>${(RP_DataCustomerSourceCat[item.SourceCatID] != undefined) ? RP_DataCustomerSourceCat[item.SourceCatID].Name : ''}</td>
                                        <td>${(RP_DataCustomerSource[item.SourceID] != undefined) ? RP_DataCustomerSource[item.SourceID].Name : ''}</td>
                                        <td>${(RP_DataBranch[item.BranchID] != undefined) ? RP_DataBranch[item.BranchID].Name : ''}</td>
                                        <td data-name="datepay">${ConvertDateTimeUTC_DMYHM(item.Created)}</td>
                                        <td data-name="dateservice">${!item.SerCreated.includes('1900') ? ConvertDateTimeUTC_DMY(item.SerCreated) : ''}</td>
                                        <td data-name="datecustomer">${ConvertDateTimeUTC_DMY(item.CusCreated)}</td>
                                    </tr>
                                                                `
                            myNode.insertAdjacentHTML('beforeend', tr);
                        }
                    }
                }
                shtable.Refresh();
                clearTimeout(timeoutCount);
                timeoutCount = setTimeout(() => {
                    Count_Up("RG_currentdata", $("#" + id).children().length);
                }, 300)
                resolve();
            }, 10)

        })
    }
    //#endregion
    //#region // Event
    function RG_Render_GetName(type, name) {
        try {
            let result = '';
            switch (type) {
                case 1:
                    result = name
                    break;
                case 2:
                    result = decodeHtml('@Local["Tiền cọc"]')
                    break;
                case 3:
                    result = decodeHtml('@Local["Đơn thuốc"]')
                    break;
                case 4:
                    result = decodeHtml('@Local["Thẻ trả trước"]')
                    break;

            }
            return result;
        }
        catch (ex) {
            return '';
        }
    }
    function RG_Render_GetType(type) {
        try {
            let result = '';
            switch (type) {
                case 1:
                    result = decodeHtml('@Local["Dịch vụ/sản phẩm"]')
                    break;
                case 2:
                    result = decodeHtml('@Local["Tiền cọc"]')
                    break;
                case 3:
                    result = decodeHtml('@Local["Đơn thuốc"]')
                    break;
                case 4:
                    result = decodeHtml('@Local["Thẻ trả trước"]')
                    break;

