                </div>
            </div>
        </div>
        <div class="collapsesticky collapse show" id="CustGroupCheckInDetail">
            <div class="card-body p-0">
                <div class="m-0 my-3 mobile-responsive">
                    <table data-name="RG_GridDetail" class="table vt-table mb-0" id="RG_GridDetail">
                        <thead>
                            <tr>
                                <th style="width: 60px">#</th>
                                <th>@Local["Mã khách hàng"]</th>
                                <th data-name="custcodeold">@Local["Mã khách hàng cũ"]</th>
                                <th data-name="doccode">@Local["Mã hồ sơ"]</th>
                                <th>@Local["Khách hàng"]</th>
                                <th>@Local["Số tiền"]</th>
                                <th>@Local["Loại"]</th>
                                <th>@Local["Nhóm dịch vụ"]</th>
                                <th>@Local["Dịch vụ"]</th>
                                <th data-name="quantity">@Local["Số lượng"]</th>
                                <th>@Local["Nguồn"]</th>
                                <th>@Local["Nguồn chi tiết"]</th>
                                <th>@Local["Chi nhánh"]</th>
                                <th data-name="datepay">@Local["Ngày thanh toán"]</th>
                                <th data-name="dateservice">@Local["Ngày tạo dịch vụ"]</th>
                                <th data-name="datecustomer">@Local["Ngày tạo hồ sơ"]</th>
                            </tr>
                        </thead>
                        <tbody id="RG_GridDetailBody">
                        </tbody>
                    </table>
                </div>
                <button class="btn btnsysmore btn-secondary w-100 p-1 mt-1 mb-0 position-relative" onclick="event.preventDefault(); return RG_RenderMore();">
                    @Local["Xem thêm"]
