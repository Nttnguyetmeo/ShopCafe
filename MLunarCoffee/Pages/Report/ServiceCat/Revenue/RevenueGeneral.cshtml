                        </li>
                        <li class="d-flex">
                            <div class="form-check form-switch">
                                <input class="shtoogle form-check-input" data-name="datecustomer" type="checkbox">
                            </div>
                            <p class="text-sm">@Local["Ngày tạo hồ sơ"]</p>
                        </li>
